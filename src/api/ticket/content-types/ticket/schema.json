{
  "kind": "collectionType",
  "collectionName": "tickets",
  "info": {
    "singularName": "ticket",
    "pluralName": "tickets",
    "displayName": "Ticket Product",
    "description": "Ticket products for events - separate from equipment products"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 255
    },
    "description": {
      "type": "customField",
      "options": {
        "preset": "default"
      },
      "customField": "plugin::ckeditor5.CKEditor",
      "required": false
    },
    "terms_conditions": {
      "type": "customField",
      "options": {
        "preset": "default"
      },
      "customField": "plugin::ckeditor5.CKEditor",
      "required": false
    },
    "main_image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "variant": {
      "type": "component",
      "repeatable": true,
      "component": "variant-product.variant-product",
      "required": true
    },
    "event_date": {
      "type": "date",
      "required": true
    },
    "waktu_event": {
      "type": "string",
      "regex": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
      "required": false
    },
    "end_date": {
      "type": "date",
      "required": false
    },
    "end_time": {
      "type": "string",
      "regex": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
      "required": false
    },
    "lokasi_event": {
      "type": "string",
      "maxLength": 500,
      "required": false
    },
    "kota_event": {
      "type": "string",
      "required": false
    },
    "rate": {
      "type": "decimal",
      "default": 5,
      "min": 0,
      "max": 5
    },
    "sold_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "escrow": {
      "type": "boolean",
      "default": false
    },
    "state": {
      "type": "enumeration",
      "enum": [
        "pending",
        "rejected",
        "approved"
      ],
      "default": "pending"
    },
    "ticket_details": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ticket-detail.ticket-detail",
      "mappedBy": "ticket"
    },
    "blogs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog.blog",
      "mappedBy": "tickets"
    }
  }
}
